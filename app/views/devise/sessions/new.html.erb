<div class="sign-in-panel home">
<br>

<%= form_tag user_ldap_omniauth_callback_path do %>
  <img src="/images/autolab.svg" alt="" class="valign login-logo">
  <h5>Login to Autolab</h5>

  <div><%= text_field_tag :username, nil, placeholder: "TUB Username" %></div>

  <div><%= password_field_tag :password, nil, placeholder: "Password" %></div>

  <div><%= submit_tag "Sign in", :class=>"btn primary" %></div>
<% end %>

<br>
<% if Rails.env == "development" %>
<%= link_to "Developer Login", "/home/developer_login" %><br />
<% end %>
<%= render "devise/shared/links" %>

</div>
